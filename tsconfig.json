{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES6",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "inlineSourceMap": true,  // âœ… Keep this, remove "sourceMap"
    "inlineSources": true,
    "plugins": [
      {
        "transform": "typia/lib/transform",
        "exclude": "node_modules/**"
      }
    ]
  },
  "include": ["src"]
}